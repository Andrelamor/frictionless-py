{
  "title": "Goodtables Spec v3",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://github.com/frictionlessdata/goodtables-py/tree/master/goodtables/assets/profiles/spec.json",
  "type": "object",
  "required": [
    "version",
    "errors"
  ],
  "properties": {
    "version": {
      "type": "string",
      "title": "Version"
    },
    "errors": {
      "type": "object",
      "title": "Errors",
      "patternProperties": {
        "^[a-zA-Z0-9-]*$":{
          "required": [
            "name",
            "message",
            "description",
            "tags"
          ],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "message": {
              "type": "string",
              "title": "Message"
            },
            "description": {
              "type": "string",
              "title": "Description"
            },
            "tags": {
              "type": "array",
              "title": "Tags",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
